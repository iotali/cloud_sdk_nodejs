# IoT platform base URL, e.g. https://iot.example.com
IOT_BASE_URL=

# Auth mode A: direct token
IOT_TOKEN=

# Auth mode B: app credentials
IOT_APP_ID=
IOT_APP_SECRET=

# Optional defaults for easier command usage
IOT_DEFAULT_PRODUCT_KEY=
IOT_DEFAULT_DEVICE_NAME=

# Optional guardrail: comma-separated writable identifiers
# Example: power_switch,target_temp,mode
IOT_WRITABLE_IDENTIFIERS=

# Keep stdout JSON-only for OpenClaw parsing (default true)
IOT_SKILL_QUIET=true

# Thing model cache
IOT_MODEL_CACHE_ENABLED=true
IOT_MODEL_CACHE_TTL_MS=300000
