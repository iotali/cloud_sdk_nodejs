# IoT platform base URL, e.g. https://iot.example.com
IOT_BASE_URL=

# Auth mode A: direct token
IOT_TOKEN=

# Auth mode B: app credentials
IOT_APP_ID=
IOT_APP_SECRET=

# Optional defaults for easier command usage
IOT_DEFAULT_PRODUCT_KEY=
IOT_DEFAULT_DEVICE_NAME=

# Optional guardrail: comma-separated writable identifiers
# Example: power_switch,target_temp,mode
IOT_WRITABLE_IDENTIFIERS=

# Keep stdout JSON-only for OpenClaw parsing (default true)
IOT_SKILL_QUIET=true

# Thing model cache
IOT_MODEL_CACHE_ENABLED=true
IOT_MODEL_CACHE_TTL_MS=300000

# Structured log to stderr (JSON lines)
IOT_STRUCTURED_LOG_ENABLED=true

# Read operation resilience
IOT_READ_TIMEOUT_MS=10000
IOT_READ_RETRY_COUNT=2
IOT_READ_RETRY_DELAY_MS=300

# Write risk policy
IOT_ALLOW_WRITE=true
IOT_WRITE_NIGHT_BLOCK_ENABLED=false
IOT_WRITE_NIGHT_START=23:00
IOT_WRITE_NIGHT_END=06:00
# Optional timezone offset minutes, e.g. 480 for UTC+8
# IOT_WRITE_TZ_OFFSET_MINUTES=480
# Sensitive actions require --confirm true
# Example: call-service,set-props
IOT_SENSITIVE_ACTIONS=
